<?xml version="1.0" encoding="UTF-8"?>
<config>
    <!-- fsl and gsl addr -->
    <udp>
        <!-- gsl port -->
        <local_port>9910</local_port>
        <!-- fsl host -->
        <remote_ip>127.0.0.1</remote_ip>
        <!-- fsl port -->
        <remote_port>9010</remote_port>
    </udp>
    <!-- data uds -->
    <data_link_uds>
        <!-- for downlink: fsl is server -->
        <server>
            <path>/tmp/DL_APP1_H</path>
            <receive_buffer_size>1024</receive_buffer_size>
        </server>
        <server>
            <path>/tmp/DL_APP1_L</path>
            <receive_buffer_size>1024</receive_buffer_size>
        </server>
        <server>
            <path>/tmp/DL_APP2_H</path>
            <receive_buffer_size>1024</receive_buffer_size>
        </server>
        <server>
            <path>/tmp/DL_APP2_L</path>
            <receive_buffer_size>1024</receive_buffer_size>
        </server>
        <server>
            <path>/tmp/DL_APP3_H</path>
            <receive_buffer_size>1024</receive_buffer_size>
        </server>
        <server>
            <path>/tmp/DL_APP3_L</path>
            <receive_buffer_size>1024</receive_buffer_size>
        </server>
        <!-- for uplink: fsl is client -->
        <client name="app1.ul">/tmp/UL_APP1</client>
        <client name="app2.ul">/tmp/UL_APP2</client>
        <client name="app3.ul">/tmp/UL_APP3</client>
    </data_link_uds>
    <!-- uplink maping: opcode => application uds -->
    <!-- uds names must match client uds names above -->
    <ul_uds_mapping>
        <mapping opcode="1" uds="app1.ul" />
        <mapping opcode="2" uds="app2.ul" />
        <mapping opcode="3" uds="app3.ul" />
    </ul_uds_mapping>
    <!-- uds channels for apps to fsl ctrl/status -->
    <ctrl_status_uds>
        <app1>
            <request>
                <path>/tmp/app1_to_fcom</path>
                <receive_buffer_size>1024</receive_buffer_size>
            </request>
            <response>
                <path>/tmp/fcom_to_app1</path>
            </response>
        </app1>
        <telemetry>
            <request>
                <path>/tmp/app1_telemetry</path>
            </request>
        </telemetry>
        <app2>
            <request>
                <path>/tmp/app2_to_fcom</path>
                <receive_buffer_size>1024</receive_buffer_size>
            </request>
            <response>
                <path>/tmp/fcom_to_app2</path>
            </response>
        </app2>
        <app3>
            <request>
                <path>/tmp/app3_to_fcom</path>
                <receive_buffer_size>1024</receive_buffer_size>
            </request>
            <response>
                <path>/tmp/fcom_to_app3</path>
            </response>
        </app3>
        <dynamic>
            <request>
                <path>/tmp/app3_dynamic</path>
                <receive_buffer_size>1024</receive_buffer_size>
            </request>
        </dynamic>
    </ctrl_status_uds>
</config>