<?xml version="1.0" encoding="UTF-8"?>
<config>
    <logging>
        <level>DEBUG</level>
    </logging>
    <!-- sensor id -->
    <sensor_id>1</sensor_id>
    <!-- fsl and gsl addr -->
    <udp>
        <!-- fsl port -->
        <local_port>9910</local_port>
        <!-- gsl host -->
        <remote_ip>127.0.0.1</remote_ip>
        <!-- gsl port -->
        <remote_port>9010</remote_port>
    </udp>
    <!-- data uds -->
    <data_link_uds>
        <!-- for downlink: fsl is server -->
        <server name="DL_EL_H">
            <path>/tmp/DL_EL_H</path>
            <receive_buffer_size>425984</receive_buffer_size>
        </server>
        <server name="DL_EL_L">
            <path>/tmp/DL_EL_L</path>
            <receive_buffer_size>65000</receive_buffer_size>
        </server>
        <server name="DL_PLMG_H">
            <path>/tmp/DL_PLMG_H</path>
            <receive_buffer_size>65000</receive_buffer_size>
        </server>
        <server name="DL_PLMG_L">
            <path>/tmp/DL_PLMG_L</path>
            <receive_buffer_size>65000</receive_buffer_size>
        </server>
        <server name="FSW_HIGH_DL">
            <path>/tmp/FSW_HIGH_DL</path>
            <receive_buffer_size>65000</receive_buffer_size>
        </server>
        <server name="FSW_LOW_DL">
            <path>/tmp/FSW_LOW_DL</path>
            <receive_buffer_size>65000</receive_buffer_size>
        </server>
        <!-- for uplink: fsl is client -->
        <client name="FSW_UL">/tmp/FSW_UL</client>
        <client name="UL_PLMG">/tmp/UL_PLMG</client>
        <client name="UL_EL">/tmp/UL_EL</client>
    </data_link_uds>
    <!-- uplink maping: opcode => application uds -->
    <!-- uds names must match client uds names above -->
    <ul_uds_mapping>
        <mapping opcode="1" uds="FSW_UL" />
        <mapping opcode="2" uds="UL_PLMG" />
        <mapping opcode="3" uds="UL_EL" />
    </ul_uds_mapping>
    <!-- uds channels for apps to fsl ctrl/status -->
    <ctrl_status_uds>
        <FSW>
            <request>
                <path>/tmp/fsw_to_fcom</path>
                <receive_buffer_size>65500</receive_buffer_size>
            </request>
            <response>
                <path>/tmp/fcom_to_fsw</path>
            </response>
        </FSW>
        <dynamic>
            <request>
                <path>/tmp/fsw_dynamic</path>
                <receive_buffer_size>65500</receive_buffer_size>
            </request>
        </dynamic>
        <PLMG>
            <request>
                <path>/tmp/plmg_to_fcom</path>
                <receive_buffer_size>65500</receive_buffer_size>
            </request>
            <response>
                <path>/tmp/fcom_to_plmg</path>
            </response>
        </PLMG>
        <telemetry>
            <request>
                <path>/tmp/plmg_telemetry</path>
            </request>
        </telemetry>
        <EL>
            <request>
                <path>/tmp/el_to_fcom</path>
                <receive_buffer_size>65500</receive_buffer_size>
            </request>
            <response>
                <path>/tmp/fcom_to_el</path>
            </response>
        </EL>
    </ctrl_status_uds>
</config>